{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch Package Image",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/installed/x64-linux-gcc/bin/luminous",
            "args": [
                "-s",
                "/data/home/wangyonghong/dev/luminous-scenes/cbox_mitsuba_ball/scene.json",
                "-o",
                "scene_linux.png",
                "-m",
                "cli",
                "-d",
                "cuda",
                "--denoise"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [
                "-s",
                "/data/home/wangyonghong/dev/luminous-scenes/cbox_mitsuba_ball/scene.json",
                "-o",
                "scene_linux.png",
                "-m",
                "cli",
                "-d",
                "cuda",
                "--progressinfo-port=8080"
            ],
            "stopAtEntry": false,
            "cwd": "${command:cmake.getLaunchTargetDirectory}",
            "environment": [
                {
                    // add the directory where our target was built to the PATHs
                    // it gets resolved by CMake Tools:
                    "name": "PATH",
                    "value": "${env:PATH}:${command:cmake.getLaunchTargetDirectory}"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "visualizerFile": "${workspaceFolder}/src/LumiRender.natvis",
            "showDisplayString": true
        },
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            // Resolved by CMake Tools:
            "program": "${command:cmake.launchTargetPath}",
            "args": [
                "--scene",
                "E:\\work\\graphic\\renderer\\LumiRender\\LumiRender\\res\\render_scene\\cornell-box\\lumi_scene.json",
                "-d",
                "cuda",
                "-m",
                "gui",
                "-t",
                "1"
            ],
            "stopAtEntry": false,
            "cwd": "${command:cmake.getLaunchTargetDirectory}",
            "environment": [
                {
                    // add the directory where our target was built to the PATHs
                    // it gets resolved by CMake Tools:
                    "name": "PATH",
                    "value": "${env:PATH};${command:cmake.getLaunchTargetDirectory};${env:OIDN_1_4_3_INSTALL_DIR}/bin"
                },
            ],
            "console": "externalTerminal",
            "visualizerFile": "${workspaceFolder}/src/LumiRender.natvis",
            "showDisplayString": true
        }
    ]
}